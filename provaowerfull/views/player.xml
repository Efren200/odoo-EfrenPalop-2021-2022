<odoo>
    <data>
        <record model="ir.ui.view" id="provaowerfull.player_tree">
            <field name="name">provaowerfull player Tree</field>
            <field name="model">provaowerfull.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="trophies"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="provaowerfull.player_form">
            <field name="name">provaowerfull player Form</field>
            <field name="model">provaowerfull.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                      <field name="icon" widget="image"/>
                      <group>
                        <group>
                          <separator string="Player Account Information"></separator>
                          <field name="name"/>
                          <field name="password"/>
                          <field name="registration_date"/>
                          <field name="trophies"/>
                          <field name="level"/>
                        </group>
                        <group>
                          <separator string="Resources"></separator>
                          <field name="gold"/>
                          <field name="mana"/>
                          <field name="gems"/>
                        </group>
                        <group>
                            <separator string="Laboratories"></separator>
                            <separator string="Heroes Laboratory"></separator>
                            <button type="object" string="Generate Hero"></button>
                            <separator string="Potions Laboratory"></separator>
                            <button type="object" string="Generate Potion"></button> 
                        </group>
                      </group>
                      <notebook>
                        <page string="Heroes">
                          <field name="heroes">
                            <tree>
                              <field name="name"/>
                              <field name="stars"/>
                              <field name="type"/>
                            </tree>
                          </field>
                        </page>
                        <page string="Buildings">
                            <field name="buildings">
                              <tree>
                                <field name="name"/>
                              </tree>
                            </field>
                          </page>
                          <page string="Potions">
                            <field name="potions">
                              <tree>
                                <field name="name"/>
                              </tree>
                            </field>
                          </page>
                      </notebook>
                    </sheet>
                    </form>
            </field>

        </record>
    </data>
</odoo>