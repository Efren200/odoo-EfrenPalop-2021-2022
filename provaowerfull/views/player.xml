<odoo>
    <data>
        <record model="ir.ui.view" id="provaowerfull.player_tree">
            <field name="name">provaowerfull player Tree</field>
            <field name="model">provaowerfull.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="trophies"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="provaowerfull.player_form">
            <field name="name">provaowerfull player Form</field>
            <field name="model">provaowerfull.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                      <field name="icon" widget="image"/>
                      <group>
                        <group>
                          <separator string="Player Account Information"></separator>
                          <field name="name"/>
                          <field name="password"/>
                          <field name="registration_date"/>
                          <field name="trophies"/>
                          <field name="level"/>
                        </group>
                        <group>
                          <separator string="Resources"></separator>
                          <field name="gold"/>
                          <field name="mana"/>
                          <field name="gems"/>
                        </group>
                        <group>
                          <separator string="Heroes Laboratory"></separator>
                          <button name="random_hero" type="object" string="Generate Hero"></button>
                        </group>
                      </group>
                      <notebook>
                        <page string="Heroes">
                          <field name="heroes">
                            <tree>
                              <field name="name"/>
                              <field name="stars"/>
                              <field name="type"/>
                              <button name="delete_hero" type="object" string="Delete Hero" class="oe_highlight" context="{'player': parent.id}"/>
                            </tree>
                          </field>
                        </page>
                        <page string="Buildings">
                            <field name="buildings">
                              <tree>
                                <field name="name"/>
                              </tree>
                            </field>
                          </page>
                          <page string="Potions">
                            <field name="potions">
                              <tree>
                                <field name="name"/>
                                <field name="attack_increase"/>
                                <field name="defense_increase"/>
                                <field name="health_increase"/>
                              </tree>
                            </field>
                          </page>
                      </notebook>
                    </sheet>
                    <sheet>
                      <separator string="Potions Shop"></separator>
                      <group>
                        <button name="buy_small_potion" type="object" string="Small Potion"></button>
                        <button type="object" string="Big Potion"></button>
                        <button type="object" string="Attack Potion"></button>
                        <button type="object" string="Defense Potion"></button>
                      </group>
                      <separator string="Buildings Shop"></separator>
                      <group>
                        <button type="object" string="Goldmine"></button>
                        <button type="object" string="Mana Colletctor"></button>
                        <button type="object" string="Gem Mine"></button>
                        <button type="object" string="Gold Store"></button>
                        <button type="object" string="Mana Store"></button>
                        <button type="object" string="Gems Store"></button>
                      </group>
                    </sheet>
                    </form>
            </field>

        </record>
    </data>
</odoo>