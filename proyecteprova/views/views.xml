      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="proyecteprova.action_collector_building_window">
      <field name="name">proyecteprova collector_building window</field>
      <field name="res_model">proyecteprova.collector_building</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="proyecteprova.action_storage_building_window">
