    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="proyecteprova.player_list">
      <field name="name">proyecteprova player list</field>
      <field name="model">proyecteprova.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="level"/>
          <field name="gold"/>
          <field name="mana"/>
          <field name="gems"/>
          <field name="trophies"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="proyecteprova.action_player_window">
      <field name="name">proyecteprova player window</field>
      <field name="res_model">proyecteprova.player</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="proyecteprova.action_hero_window">
