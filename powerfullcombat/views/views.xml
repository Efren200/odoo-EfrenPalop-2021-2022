<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="powerfullcombat.player_list">
      <field name="name">powerfullcombat player list</field>
      <field name="model">powerfullcombat.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="level"/>
          <field name="gold"/>
          <field name="mana"/>
          <field name="gems"/>
          <field name="trophies"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="powerfullcombat.action_player_window">
      <field name="name">powerfullcombat player window</field>
      <field name="res_model">powerfullcombat.player</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="powerfullcombat.action_hero_window">
      <field name="name">powerfullcombat hero window</field>
      <field name="res_model">powerfullcombat.hero</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="powerfullcombat.action_potion_window">
      <field name="name">powerfullcombat potion window</field>
      <field name="res_model">powerfullcombat.potion</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="powerfullcombat.action_collector_building_window">
      <field name="name">powerfullcombat collector_building window</field>
      <field name="res_model">powerfullcombat.collector_building</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="powerfullcombat.action_storage_building_window">
      <field name="name">powerfullcombat storage_building window</field>
      <field name="res_model">powerfullcombat.storage_building</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="powerfullcombat.action_building_window">
      <field name="name">powerfullcombat building window</field>
      <field name="res_model">powerfullcombat.building</field>
      <field name="view_mode">tree,form</field>
    </record>

